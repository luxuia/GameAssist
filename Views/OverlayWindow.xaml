<Window x:Class="GameAssist.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown">
    <Window.Resources>
        <Style x:Key="SuggestionText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="LineHeight" Value="24"/>
        </Style>
        <SineEase x:Key="FadeEase" EasingMode="EaseInOut"/>
    </Window.Resources>

    <Grid x:Name="MainGrid" Opacity="0">
        <Border x:Name="SuggestionBorder"
                CornerRadius="8"
                Background="#A0000000"
                BorderBrush="#40000000"
                BorderThickness="1"
                Margin="20"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                MaxWidth="600">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <!-- Drag Handle Area -->
                <Border x:Name="DragHandle"
                        Background="Transparent"
                        Height="30"
                        VerticalAlignment="Top"
                        Cursor="Hand"
                        MouseDown="DragHandle_MouseDown">
                    <Grid>
                        <!-- Drag Handle Indicator -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0">
                            <Rectangle Width="20" Height="3" Fill="White" Opacity="0.3" Margin="0,1"/>
                            <Rectangle Width="20" Height="3" Fill="White" Opacity="0.3" Margin="2,1"/>
                            <Rectangle Width="20" Height="3" Fill="White" Opacity="0.3" Margin="2,1"/>
                        </StackPanel>

                        <!-- Title -->
                        <TextBlock Text="Dota 2 Assistant"
                                   Foreground="White"
                                   Opacity="0.7"
                                   FontSize="12"
                                   FontWeight="Light"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="35,0,0,0"/>

                        <!-- Close Button -->
                        <Button x:Name="CloseButton"
                                Content="âœ•"
                                Foreground="White"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Width="20" Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="5"
                                FontSize="14"
                                Click="CloseButton_Click"
                                Cursor="Hand"
                                Opacity="0.7"/>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <StackPanel Margin="10,40,10,10">
                    <TextBlock x:Name="SuggestionTextBlock"
                               Style="{StaticResource SuggestionText}"
                               Text="Loading suggestion..."/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="MainGrid"
                                   Storyboard.TargetProperty="Opacity"
                                   From="0" To="1"
                                   Duration="0:0:0.3"
                                   EasingFunction="{StaticResource FadeEase}"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>
