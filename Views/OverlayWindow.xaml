<Window x:Class="GameAssist.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        IsHitTestVisible="False">
    <Window.Resources>
        <Style x:Key="SuggestionText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="LineHeight" Value="24"/>
        </Style>
        <SineEase x:Key="FadeEase" EasingMode="EaseInOut"/>
    </Window.Resources>

    <Grid x:Name="MainGrid" Opacity="0">
        <Border x:Name="SuggestionBorder"
                CornerRadius="8"
                Background="#A0000000"
                BorderBrush="#40000000"
                BorderThickness="1"
                Margin="20"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                MaxWidth="600">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel Margin="10">
                <TextBlock x:Name="SuggestionTextBlock"
                           Style="{StaticResource SuggestionText}"
                           Text="Loading suggestion..."/>
            </StackPanel>
        </Border>
    </Grid>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="MainGrid"
                                   Storyboard.TargetProperty="Opacity"
                                   From="0" To="1"
                                   Duration="0:0:0.3"
                                   EasingFunction="{StaticResource FadeEase}"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>
